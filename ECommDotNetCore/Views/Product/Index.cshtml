@model List<Product>

<partial name="Notification"></partial>
<a asp-controller="Product" asp-action="AddProduct"><input type="submit" value="Add Product" class="btn btn-info" /></a>
<form method="post">
<br />
    <select name="choice">
        <option>All</option>
        <option>Lowest to Highest</option>
    </select>
    <input type="submit" value="Fliter" class="btn btn-primary btn-sm" />
</form>
<br />
<br />
<div class="d-flex gap-3">
    @foreach (var d in Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" height="240" width="240" src="/@d.Picture" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@d.Pname</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@d.Pcat</li>
                <li class="list-group-item">@d.Price</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-sm btn-primary" asp-controller="Product" asp-action="AddToCart" asp-route-id="@d.Pid">Add To Cart</a>
            </div>
        </div>
    }
</div>